{
  "name": "sdk-repo",
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "cli": "bun packages/cli/bin/create-sdk-remote.js",
    "preview": "turbo preview"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
